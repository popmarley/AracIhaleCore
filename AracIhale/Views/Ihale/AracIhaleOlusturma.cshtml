
<div class="container mt-5">
	<h4 style="color:dimgrey;">İhale Genel Bilgiler</h4>
	<form>
		<div class="row mb-3">
			<div class="col">
				<label for="plaka" class="form-label">Aracın Plakası</label>
				<select class="form-select" id="plaka">
					<option value="" disabled selected>Seçiniz...</option>
					<option value="1">Araç 1</option>
					<option value="2">Araç 2</option>
					<option value="3">Araç 3</option>
				</select>
			</div>
			<div class="col">
				<label class="form-label">İhale Adı</label>
				<input type="text" class="form-control" placeholder="İhale Adı">
			</div>
			<div class="col">
				<label class="form-label">İhale Başlangıç Fiyatı</label>
				<input type="text" class="form-control" placeholder="İhale Başlangıç Fiyatı">
			</div>
			<div class="col">
				<label class="form-label">Minimum Alım Fiyatı</label>
				<input type="text" class="form-control" placeholder="Minimum Alım Fiyatı">
			</div>
		</div>
		<div class="row mb-3">
			<div class="col-md-3">
				<label for="bireyselkurumsal" class="form-label">Bireysel/Kurumsal</label>
				<select class="form-select" id="bireyselkurumsal">
					<option value="" disabled selected>Seçiniz...</option>
					<option value="1">Bireysel</option>
					<option value="2">Kurumsal</option>
				</select>
			</div>
			<div class="col-md-3">
				<label class="form-label">Şirket Adı</label>
				<input type="text" class="form-control" placeholder="Şirket Adı">
			</div>
			<div class="col-md-3">
				<label for="ihaleStatusu" class="form-label">İhale Statüsü</label>
				<select class="form-select" id="ihaleStatusu">
					<option value="" disabled selected>Seçiniz...</option>
					<option value="acik">Açık İhale</option>
					<option value="kapali">Kapalı İhale</option>
					<option value="iptal">İptal Edilmiş İhale</option>
					<option value="tamamlanan">Tamamlanan İhale</option>
				</select>
			</div>
		</div>
		<div class="row mb-3">
			<div class="col">
				<label for="IhaleBaslangicTarihi" class="form-label">İhale Başlangıç Tarihi</label>
				<input type="date" class="form-control">
			</div>
			<div class="col">
				<label class="form-label">İhale Bitiş Tarihi</label>
				<input type="date" class="form-control">
			</div>
			<div class="col">
				<label class="form-label">İhale Başlangıç Saati</label>
				<input type="time" class="form-control">
			</div>
			<div class="col">
				<label class="form-label">İhale Bitiş Saati</label>
				<input type="time" class="form-control">
			</div>
		</div>
		<br />
		<div class="col-md-12 d-flex justify-content-end">
			<button type="submit" class="btn btn-primary mb-5">İhale Oluştur</button>
		</div>
	</form>

</div>
<br />
<table class="table">
	<h4 style="color:dimgrey;">İhale Araç Listesi</h4>
	<thead>
		<tr>
			<th>Araç ID</th>
			<th>Araç Markası</th>
			<th>Modeli</th>
			<th>Bireysel/Kurumsal</th>
			<th>Statüsü</th>
			<th>Kaydeden Kullanıcı</th>
			<th>Kaydetme Zamanı</th>
			<th>Fiyatı</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<!-- buraya araç listesi dinamik olarak gelecek -->
	</tbody>
</table>
<br />
<div class="row mt-12">
	<div class="col-md-12 d-flex justify-content-end">
		<button class="btn btn-primary me-2">Geri Dön</button>
	</div>
</div>
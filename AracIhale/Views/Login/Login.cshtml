@{
	Layout = null;
}

<!doctype html>
<html lang="en">
<head>
	<title>Kullanıcı Giriş Ekranı</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

	<link rel="icon" type="image/png" href="/lib/favicon.ico" />
	<link rel="stylesheet" href="/css/style.css">
</head>

<body class="img js-fullheight" style="background-image: url(/lib/jquery/bg.jpg);">
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-4">
					<div class="login-wrap p-0">
						<h3 class="mb-4 text-center">Kullanıcı Giris Ekranı</h3>
						<form action="/Login/Login" method="post" class="signin-form">
							<div class="form-group">
								<input type="text" name="KullaniciAdi" class="form-control" placeholder="Kullanıcı Adı" value="@Context.Request.Cookies["username"]" required>
							</div>
							<div class="form-group">
								<input id="password-field" type="password" name="Sifre" class="form-control" placeholder="Sifre" required>
								<span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
							</div>
							<div class="form-group">
								<label class="checkbox-wrap checkbox-primary">
									Beni Hatırla
									<input type="checkbox" name="rememberMe" value="true">
									<span class="checkmark"></span>
								</label>
							</div>
							<div class="form-group">
								<button type="submit" class="form-control btn btn-primary submit px-3">GİRİŞ Yap</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</section>

	<script src="/js/jquery.min.js"></script>
	<script src="/js/popper.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/main.js"></script>

</body>
</html>

<script>
	$(document).ready(function () {
		var username = getCookie("username");
		if (username) {
			$('input[name="KullaniciAdi"]').val(username);
		}
	});

	function getCookie(name) {
		var value = "; " + document.cookie;
		var parts = value.split("; " + name + "=");
		if (parts.length == 2) return parts.pop().split(";").shift();
	}
</script>


@using System.Runtime.Serialization
@using AracIhale.UI.Models.Extension;
@using Microsoft.AspNetCore.Http
@using AracIhale.UI.Models.Enums

@inject IHttpContextAccessor HttpContextAccessor

@{
	var user = HttpContextAccessor.HttpContext?.Session.MySessionGet<string>("Ad");
	var rolID = HttpContextAccessor.HttpContext?.Session.MySessionGet<int>("RolID");
	var roleName = rolID.HasValue ? UserRolesHelper.GetRoleName(rolID.Value) : "Bilinmeyen";
}


<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<title>Araç İhale</title>
	<meta content="width=device-width, initial-scale=1.0" name="viewport">
	<meta content="" name="keywords">
	<meta content="" name="description">

	<!-- Favicon -->
	<link href="/lib/favicon.ico" rel="icon">

	<!-- Google Web Fonts -->
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Roboto:wght@500;700&display=swap" rel="stylesheet">

	<!-- Icon Font Stylesheet -->
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

	<!-- Libraries Stylesheet -->
	<link href="/Contents/darkpan-1.0.0/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
	<link href="/Contents/darkpan-1.0.0/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

	<!-- Customized Bootstrap Stylesheet -->
	<link href="/Contents/darkpan-1.0.0/css/bootstrap.min.css" rel="stylesheet">

	<!-- Template Stylesheet -->
	<link href="/Contents/darkpan-1.0.0/css/style.css" rel="stylesheet">
</head>

<body>
	<div class="container-fluid position-relative d-flex p-0">
		<div id="spinner" class="show bg-dark position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
			<div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
				<span class="sr-only">Yükleniyor...</span>
			</div>
		</div>
		<div class="sidebar pe-3 pb-3">
			<nav class="navbar bg-secondary navbar-dark">
				<a href="@Url.Action("AracListeleme")" class="navbar-brand mx-4 mb-3">
					<h3 class="text-primary"><i class="fa fa-user-edit me-2"></i>Araç İhale</h3>
				</a>
				<div class="d-flex align-items-center ms-4 mb-4">
					<div class="position-relative">
						<img class="rounded-circle" src="/Contents/darkpan-1.0.0/img/user 2.png" alt="" style="width: 40px; height: 40px;">
						<div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
					</div>
					<div class="ms-3">
						<h6 class="mb-0">@user</h6>
						<span>@roleName</span>
					</div>
				</div>
				<div class="navbar-nav w-100">
					<a href="/Ihale/AracListeleme" class="nav-item nav-link"><i class="fa fa-list me-2"></i>İhale Listeleme</a>
					@if (rolID == 1 || rolID == 3)
					{
						<a href="/Ihale/AracIhaleOlusturma" class="nav-item nav-link"><i class="fa fa-th me-2"></i>İhale Teklif Listesi</a>
					}
				</div>
			</nav>
		</div>

	</div>
	<div class="content">
		<nav class="navbar navbar-expand bg-secondary navbar-dark sticky-top px-4 py-0">
			@await Html.PartialAsync("_Header")
		</nav>

		<div class="container">
			@RenderBody()
		</div>

		<div class="container-fluid pt-4 px-4">
			@await Html.PartialAsync("_Footer")
		</div>
	</div>
	<a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<!-- JavaScript Libraries -->
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="/Contents/darkpan-1.0.0/lib/chart/chart.min.js"></script>
<script src="/Contents/darkpan-1.0.0/lib/easing/easing.min.js"></script>
<script src="/Contents/darkpan-1.0.0/lib/waypoints/waypoints.min.js"></script>
<script src="/Contents/darkpan-1.0.0/lib/owlcarousel/owl.carousel.min.js"></script>
<script src="/Contents/darkpan-1.0.0/lib/tempusdominus/js/moment.min.js"></script>
<script src="/Contents/darkpan-1.0.0/lib/tempusdominus/js/moment-timezone.min.js"></script>
<script src="/Contents/darkpan-1.0.0/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

<!-- Template Javascript -->
<script src="/Contents/darkpan-1.0.0/js/main.js"></script>